    <div class="row">
        <div class= "col-md-6 col-md-offset-3">
            <div class= "page-header">
              <h1> Login </h1>
            </div>
        </div>
        <div class="col-md-4 col-md-offset-4">
            <form action="login/submit" method="POST">
                  <div class="form-group">
                      <label for="email">Email address:</label>
                      <input type="email" name="email" class="form-control" id="user[email]">
                  </div>
                  <div class="form-group">
                      <label for="pwd">Password:</label>
                      <input type="password" name="password" class="form-control" id="pwd">
                  </div>
                  <div class="col-md-4 col-md-offset-4">
                      <button type="submit" class="btn btn-default"  margin-top: 20px;
                          margin-bottom: 20px;
                          margin-left: 20%;>Submit
                      </button>
                  </div>
            </form>
         </div>
  </div>
  <br>

  <div class="row" style="padding-left:31px;">
      <%=session[:error]%>
      <div class= "col-md-1 col-md-offset-5">
          <a  style="padding-right:5px" class="btn btn-primary" href="/registration" role="button">Create Account</a>
      </div>
  </div>

